@model IEnumerable<ECommerce.Data.Category>


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Index";
}

<div class="container">
    <nav class="mt-2" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item "><a class="text-info" asp-action="Index" asp-controller="Categories">Categories</a></li>
        </ol>
    </nav>
    <div class="row offset-4">
        <div class="text-center">
                <a class="card-title mx-3 my-3 btn btn-outline-info text-info" asp-action="Create">Create New Category</a>
         </div>
        
    </div>
    <div class="row">
        @if (Model != null)
        {

            <table id="CategoryTable" class=" display table table-striped table-bordered w-100">

                <thead class="text-center">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ParentID)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParentID)
                            </td>
                            <td class="text-center">
                                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="card">
                <h1 class="lead">No Data Available</h1>
            </div>
        }
    </div>
   

</div>
